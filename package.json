{
  "name": "safe-track",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{css,scss,sass,less,html}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*.py": [
      "node backend/venv-tool.js --python -m ruff check --fix",
      "node backend/venv-tool.js --python -m ruff format --line-length 100"
    ]
  }
}
